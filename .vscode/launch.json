  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'kalatori' with chopsticks",
      "cargo": {
        "args": [
          "build",
          "--bin=kalatori",
          "--package=kalatori"
        ],
        "filter": {
          "name": "kalatori",
          "kind": "bin"
        }
      },
      "args": ["--config=assethub-chopsticks.toml"],
      "envFile": "default.env",
      "cwd": "${workspaceFolder}"
    }
  ]
}
